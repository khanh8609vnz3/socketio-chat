<!doctype html>
<html>

<head>
    <title>Socket.IO chat</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font: 13px Helvetica, Arial;
        }

        form {
            background: #000;
            padding: 3px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        form input {
            border: 0;
            padding: 10px;
            width: 90%;
            margin-right: .5%;
        }

        form button {
            width: 9%;
            background: rgb(130, 224, 255);
            border: none;
            padding: 10px;
        }

        #messages {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        #messages li {
            padding: 5px 10px;
        }

        #messages li:nth-child(odd) {
            background: #eee;
        }
    </style>
</head>

<body>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
        $(function () {
            var socket = io();

            // Enter name and connect to server
            $('#btnConnect').click(() => {
                socket.emit('user connected', $('#txtName').val());
            })

            $('form').submit((e) => {
                e.preventDefault(); // prevents page reloading
                socket.emit('chat message', $('#txtInput').val());
                $('#txtInput').val('');
                return false;
            });

            // Listen event 'chat message'
            socket.on('chat message', (msg) => {
                $('#messages').append($('<li>').text(msg));
            });

            // Listen event 'user connected'
            socket.on('user connected', (name) => {
                $('#messages').append($('<li>').text(`User '${name}' connected`));
            });

            // Listen event 'user disconnected'
            socket.on('user disconnected', () => {
                $('#messages').append($('<li>').text('A user has disconnected'));
            });
        });
    </script>
    <ul id="messages"></ul>
    <input id="txtName" autocomplete="off" /><button id="btnConnect">Connect</button>
    <form action="">
        <input id="txtInput" autocomplete="off" /><button>Send</button>
    </form>
</body>

</html>